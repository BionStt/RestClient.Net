<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CF.RESTClient.NET.Sample.MainPage"
             Title="MainPage" >

    <TabbedPage.Children>
        <ContentPage Title="Repo" x:Name="ReposPage">

            <Grid>
                <ProgressBar x:Name="Ring2" />


                <Grid Grid.Row="1" Grid.Column="1">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="200" />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>

                    <Label Text="Username: " VerticalOptions="Center" HorizontalOptions="Right" />
                    <TextBox x:Name="UsernameBox" Text="MelbourneDeveloper" Grid.Column="1" VerticalOptions="Center" />
                    <Label Text="Password: " Grid.Column="2" VerticalOptions="Center" HorizontalOptions="Right" />
                    <Entry IsPassword="True" x:Name="ThePasswordBox"  Grid.Column="3" VerticalOptions="Center" />
                    <Button Content="Get My Repos" Grid.Column="4" Margin="2" x:Name="GetReposButton" />

                    <ListBox x:Name="ReposBox"  DisplayMemberPath="name" Grid.Row="1"  Grid.ColumnSpan="5" Margin="4" SelectionChanged="ReposBox_SelectionChanged" />

                    <Grid Grid.Row="2" Grid.ColumnSpan="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="DescriptionBox" Width="500" />
                            <Button Content="Change Description"  x:Name="ChangeDescriptionButton" />
                        </StackPanel>
                    </Grid>

                </Grid>

            </Grid>

        </ContentPage>


        <ContentPage Title="Country Codes" x:Name="CountryCodesPage" >

            <Grid  >
                <ProgressRing Canvas.ZIndex="10" x:Name="Ring1" IsActive="True" VerticalOptions="Stretch" HorizontalOptions="Stretch" Margin="10" />

                <ListBox x:Name="CountryCodeList" VerticalOptions="Stretch" HorizontalOptions="Stretch" Margin="4" >
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Background="Blue" VerticalOptions="Center"  >
                                <Label Text="{Binding name}" VerticalOptions="Center" />
                                <Label Text=" - " VerticalOptions="Center" />
                                <Label Text="{Binding alpha2_code}" VerticalOptions="Center" />
                                <Label Text=" - " VerticalOptions="Center" />
                                <Label Text="{Binding alpha3_code}" VerticalOptions="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </Grid>

        </ContentPage>

    </TabbedPage.Children>

</TabbedPage>